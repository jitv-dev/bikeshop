<div class="container my-5">
    <h1 class="text-center mb-3">Detalle compra #{{compra.id}}</h1>
    <div class="d-flex justify-content-center mb-3">
        <a href="/compras" class="btn btn-secondary">Volver a compras</a>
    </div>
    <div class="text-center">
        <p class="text-body-secondary">Fecha: {{compra.createdAt}}</p>
    </div>
    <table class="table table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Tipo</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            {{#each compra.bicicleta}}
            <tr>
                <td>{{this.marca}}</td>
                <td>{{this.modelo}}</td>
                <td>{{this.tipo}}</td>
                <td>{{this.precio}}</td>
                <td>{{this.compra_bicicleta.cantidad}}</td>
                <td>{{this.compra_bicicleta.subtotal}}</td>
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr class="table-dark">
                <td colspan="5" class="bg-transparent border-0"></td>
                <td class="fw-bold border-top">Total: ${{compra.total}}</td>
            </tr>
        </tfoot>
    </table>
</div>