{{> flash}}
<div class="container my-5">
    <div class="table-responsive text-center">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Precio</th>
                    <th>AÃ±o</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each bicicletas as |bicicleta|}}
                <tr>
                    <td class="align-middle">{{bicicleta.marca}}</td>
                    <td class="align-middle">{{bicicleta.modelo}}</td>
                    <td class="align-middle">${{bicicleta.precio}}</td>
                    <td class="align-middle">{{bicicleta.year}}</td>
                    <td class="align-middle">
                        <a href="/bicicletas/{{bicicleta.id}}" class="btn btn-primary btn-sm">Detalles</a>
                        <a href="/bicicletas/{{bicicleta.id}}/edit" class="btn btn-warning btn-sm">Editar</a>
                        <form action="/bicicletas/{{bicicleta.id}}?_method=DELETE" method="POST" class="d-inline-block">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Seguro deseas eliminar esta bicicleta?')">Eliminar</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>