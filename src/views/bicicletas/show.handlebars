{{> flash}}
<div class="container mt-5">
    <!-- Título centrado -->
    <div class="row mb-4">
        <div class="col text-center">
            <h1 class="display-4">Detalles Bicicleta ID: {{bicicleta.id}}</h1>
        </div>
    </div>

    <!-- Card con los detalles -->
    <div class="row justify-content-center text-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Información de la Bicicleta</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Marca:</strong> {{bicicleta.marca}}</p>
                            <p><strong>Modelo:</strong> {{bicicleta.modelo}}</p>
                            <p><strong>Tipo:</strong> {{bicicleta.tipo}}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Año:</strong> {{bicicleta.year}}</p>
                            <p><strong>Precio:</strong> ${{bicicleta.precio}}</p>
                            <p><strong>Disponible:</strong>
                                {{#if bicicleta.disponible}}
                                <span class="badge bg-success">Sí</span>
                                {{else}}
                                <span class="badge bg-danger">No</span>
                                {{/if}}
                            </p>
                        </div>
                        <div class="col-12 text-center">
                            <a href="/bicicletas/{{bicicleta.id}}/edit" class="btn btn-warning">Editar</a>
                            <form action="/bicicletas/{{bicicleta.id}}?_method=DELETE" method="POST" class="d-inline-block">
                                <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Seguro deseas eliminar esta bicicleta?')">Eliminar</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a href="/bicicletas" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </div>
        </div>
    </div>
    <div>
        <hr class="my-5">
        <div class="text-center">
            <h3 class="display-6">Reseñas</h3>
            <a href="/reviews/new?bicicletaId={{bicicleta.id}}" class="btn btn-info btn-lg">Nueva reseña</a>
        </div>
        {{#if bicicleta.reviews.length}}
        <ul class="list-group my-5">
            {{#each bicicleta.reviews}}
            <li class="list-group-item py-3">
                <p><strong>Comentario: </strong>{{this.comentario}}</p>
                <p><strong>Calificación: </strong>{{this.calificacion}}/5</p>
                <p class="mb-0"><strong>Fecha: </strong>{{this.updatedAt}}</p>
                <div class="mt-3">
                    <a href="/reviews/{{this.id}}/edit" class="btn btn-outline-warning">Editar</a>
                    <form action="/reviews/{{this.id}}?_method=DELETE" method="POST" class="d-inline-block">
                        <button type="submit" class="btn btn-outline-danger"
                            onclick="return confirm('Seguro deseas eliminar esta bicicleta?')">Eliminar</button>
                    </form>
                </div>
            </li>
            
            {{/each}}
        </ul>
        {{else}}
            <p class="text-center">No hay reseñas para esta bicicleta</p>
        {{/if}}
    </div>
</div>



